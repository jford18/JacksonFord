@page "{id:int}"
@model TareasPendientes.Pages.Tareas.DeleteModel
@{
    ViewData["Title"] = "Eliminar Tarea";
}

<h1>Eliminar Tarea</h1>

<h3>¿Está seguro que desea eliminar esta tarea?</h3>
<div>
    <h4>Tarea</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Titulo
        </dt>
        <dd class="col-sm-10">
            @Model.Tarea.Titulo
        </dd>
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
            @Model.Tarea.Descripcion
        </dd>
        <dt class="col-sm-2">
            Fecha Creacion
        </dt>
        <dd class="col-sm-10">
            @Model.Tarea.FechaCreacion.ToString("d")
        </dd>
        <dt class="col-sm-2">
            Fecha Vencimiento
        </dt>
        <dd class="col-sm-10">
            @Model.Tarea.FechaVencimiento.ToString("d")
        </dd>
        <dt class="col-sm-2">
            Completada
        </dt>
        <dd class="col-sm-10">
            @Model.Tarea.Completada ? "Sí" : "No"
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Tarea.ID" />
        <button type="submit" class="btn btn-danger">Eliminar</button> |
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
